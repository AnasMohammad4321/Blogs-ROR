<style>
  .article-form {
    max-width: 500px;
    margin: 0 auto;
    background-color: #fff;
    border-radius: 5px;
    padding: 20px;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
  }

  .label {
    font-weight: bold;
  }

  .input,
  .textarea {
    width: 100%;
    padding: 10px;
    border: 1px solid #ccc;
    border-radius: 3px;
    margin-bottom: 10px;
  }

  .textarea {
    height: 150px;
    resize: vertical;
  }

  .error-message {
    color: red;
    font-size: 0.8rem;
    margin-top: -10px;
  }

  .select {
    width: 100%;
    padding: 10px;
    border: 1px solid #ccc;
    border-radius: 3px;
    margin-bottom: 10px;
  }

  .submit-button {
    background-color: #4caf50;
    color: #fff;
    padding: 10px 20px;
    border: none;
    border-radius: 3px;
    cursor: pointer;
  }

  .submit-button:hover {
    background-color: #45a049;
  }
</style>

<%= form_with model: article, html: { class: "article-form" } do |form| %>
  <div class="form-group">
    <%= form.label :title, class: "label" %><br>
    <%= form.text_field :title, class: "input" %>
    <% article.errors.full_messages_for(:title).each do |message| %>
      <div class="error-message"><%= message %></div>
    <% end %>
  </div>

  <div class="form-group">
    <%= form.label :body, class: "label" %><br>
    <%= form.text_area :body, class: "textarea" %><br>
    <% article.errors.full_messages_for(:body).each do |message| %>
      <div class="error-message"><%= message %></div>
    <% end %>
  </div>

  <div class="form-group">
    <%= form.label :status, class: "label" %><br>
    <%= form.select :status, ['public', 'private', 'archived'], selected: 'public', class: "select" %>
  </div>

  <div class="form-group">
    <%= form.submit "Submit", class: "submit-button" %>
  </div>
<% end %>
